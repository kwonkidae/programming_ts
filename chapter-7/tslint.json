{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"no-trailing-whitespace": [true, "always"],
    "prefer-const": [true, {"destructuring": "any"}],
    "semicolon": [true, "always"],
    "space-before-function-paren": [true, "never"],
		"quotemark": [true, "single"],
		"indent": [ true, "spaces", 2 ],
		"no-console": false
	},
	"rulesDirectory": []
}
